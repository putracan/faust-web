{
  "hosting": {
    "public": ".",
    "ignore": [
      ".venv",
      ".venv/**",
      ".venv/**/*",
      "venv",
      "venv/**",
      "venv/**/*",
      "**/.venv",
      "**/.venv/**",
      "**/venv",
      "**/venv/**",
      "**/__pycache__",
      "**/__pycache__/**",
      "**/*.pyc",
      "**/*.pyo",
      "**/*.pyd",
      "**/.Python",
      "firebase.json",
      "**/node_modules/**",
      "**/*.py",
      "**/*.ps1",
      "**/*.bat",
      "**/*.md",
      "**/requirements.txt",
      "**/.git/**",
      "**/.gitignore",
      "**/.firebaserc",
      "**/.firebase/**",
      "**/netlify.toml",
      "**/vercel.json",
      "**/cloudflare_page_rules.json",
      "**/FIX_FIREBASE_DEPLOY.md",
      "**/DEPLOY_FIREBASE_FIX.md",
      "**/CARA_DEPLOY_REPLACE_ALL.md",
      "**/firebase-deploy-fix.ps1",
      "**/deploy-firebase-replace.ps1",
      "**/deploy-firebase.bat",
      "**/fresh-deploy-firebase.ps1",
      "**/fresh-deploy-firebase.bat",
      "**/update_references.py",
      "**/update_all.py"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/id/index.html"
      },
      {
        "source": "/index.html",
        "destination": "/id/index.html"
      },
      {
        "source": "/en",
        "destination": "/en/index.html"
      },
      {
        "source": "/en/",
        "destination": "/en/index.html"
      }
    ],
    "errorDocument": "404.html",
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      },
      {
        "source": "robots.txt",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/xml"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "_redirects",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain"
          }
        ]
      },
      {
        "source": "src/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
